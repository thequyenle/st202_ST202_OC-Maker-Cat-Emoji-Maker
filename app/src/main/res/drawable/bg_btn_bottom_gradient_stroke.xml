<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient stroke layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#8FFFFD"
                android:endColor="#2641D7"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner background layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#291985" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
