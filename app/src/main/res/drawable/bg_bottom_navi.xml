<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient stroke (outer layer) -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="270"
                android:startColor="#01579B"
                android:endColor="#01579B" />
        </shape>
    </item>

    <!-- Inner white background to create stroke effect -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="#A1CCEF" />
        </shape>
    </item>

</layer-list>
