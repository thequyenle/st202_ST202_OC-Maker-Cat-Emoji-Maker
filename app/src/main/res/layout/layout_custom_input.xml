            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="N"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
